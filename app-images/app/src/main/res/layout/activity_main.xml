    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Center"
            android:onClick="center"
            />

        <Button
            android:id="@+id/buttonFitXY"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fitXY"
            android:onClick="fitXY"
            />

        <Button
            android:id="@+id/buttonFitStart"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fitStart"
            android:onClick="fitStart"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonCenterCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="centerCrop"
            android:onClick="centerCrop"
            />

        <Button
            android:id="@+id/buttonCenterInside"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="centerInside"
            android:onClick="centerInside"
            />

        <Button
            android:id="@+id/buttonFitCenter"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fitCenter"
            android:onClick="fitCenter"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonFitEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fitend"
            android:onClick="fitEnd"
            />

        <Button
            android:id="@+id/buttonMatrix"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matrix"
            android:onClick="Matrix"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonAlpha0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alpha 0.0"
            android:onClick="setImageAlpha0"

            />

        <Button
            android:id="@+id/buttonAlpha05"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alpha 0.5"
            android:onClick="setImageAlpha150"
            />

        <Button
            android:id="@+id/buttonAlpha1"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alpha 1.0"
            android:onClick="setImageAlpha255"
            />

    </LinearLayout>


</LinearLayout>

